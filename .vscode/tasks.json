{
  // VS Code task to run the app in dev mode
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Dev: Vite React app",
      "type": "shell",
      "command": "npm run dev",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "isBackground": true,
      "problemMatcher": "$tsc-watch",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}


